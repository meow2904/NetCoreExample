<script type="text/javascript">
    function SetSelectSearchValue(name) {
        $("input[name='" + name.replace("SelectSearch", "SelectSearchValue") + "']").val($("select[name='" + name + "'] option:selected").text());
    }
    function UpLoadFile(parameters) {
        var formData = new FormData();
        var file = $("input[name='" + parameters + "']")[0];
        formData.append("files", file.files[0]);
        window.objAjax.parameters = formData;
        AjaxFile("/FormDemo/UploadFiles", window.objAjax,
            function(response) {
                $("span[name='" + parameters.replace("File", "NameFile") + "']").text(RenameFileName(response.replace("/upload/formdemo/", "")));
                $("input[name='" + parameters.replace("File", "PathFile") + "']").val(response);
            });
    }
    $(document).ready(function() {
        var $repeater = $('#FormDemo').repeater({
            defaultValues: {
                'FormDemoDetailId': 0
            },
            show: function() {
                $(this).slideDown();
            },
            hide: function(deleteElement) {
                SwalConfirm("Bạn có chắc chắn muốn xóa?",
                    function() {
                        $(this).slideUp(deleteElement);
                    }, "", "500", "question", "Xác nhận");
                return false;
            },
            removeItem: function(item, name) {
                var dataEnd = $repeater.repeaterVal()[name][item];
                //Viết hành động xóa ở đây. OK thì trả về true, ngược lại về false
                return true;
            },
            validateAdd: function(self, name) {
                if (self === -1) return true;
                var dataEnd = $repeater.repeaterVal()[name][self];
                //Viết hành động validate ở đây. OK thì trả về true, ngược lại về false
                if (dataEnd?.Name === "") {
                    SwalNotifyError("Name không được để trống!");
                    return false;
                }
                return true;
            },
            loadAdd: function(self, name) {
                LoadFlatpickr();
                LoadComboboxApi("select[name='" + name + "[" + (self + 1) + "][SelectApi]']", "/Api/FormDemo/SelectData", false, 1, objAjax, "FormDemoId", "Name");
                LoadComboboxSearch("select[data-selected='SelectSearch']", "/Api/FormDemo/SelectData", 3, "0", 0, "FormDemoId", "Name");
            },

            ready: function(setIndexes) {
                LoadComboboxApi("select[data-selected='SelectApi']", "/Api/FormDemo/SelectData", false, 1, objAjax, "FormDemoId", "Name");
                LoadComboboxSearch("select[data-selected='SelectSearch']", "/Api/FormDemo/SelectData", 3, "", 0, "FormDemoId", "Name");
            }
        });

        //Set dữ liệu repeater
        objAjax.parameters = undefined;
        objAjax.divLoading = "#ShiftDetail";
        AjaxGetAsync("/Api/FormDemoDetail/FindByFormDemoIdAsync/" + parseInt('@Model?.FormDemoId'), window.objAjax,
            function(result) {
                var data = JSON.parse(result);
                if (data.length > 0) {
                    $repeater.setList(data, function(name) {
                        LoadFlatpickr();
                        LoadComboboxApi("select[data-selected='SelectApi']", "/Api/FormDemo/SelectData", false, 1, objAjax, "FormDemoId", "Name");
                        LoadComboboxSearch("select[data-selected='SelectSearch']", "/Api/FormDemo/SelectData", 3, "", 0, "FormDemoId", "Name");

                        //Set Value cho Select
                        for (var i = 0; i < data.length; i++) {
                            var obj = data[i];
                            //Gán dữ liệu cho SelectSearch
                            $("select[name='" + name + "[" + i + "][SelectSearch]']").append(new Option(obj.SelectSearchValue, parseInt(obj.SelectSearch), true, true)).trigger('change');
                            //Gán dữ liệu cho SelectApi
                            $("select[name='" + name + "[" + i + "][SelectApi]']").val(obj.SelectApi).trigger('change');
                            //Gán NameFile
                            $("span[name='" + name + "[" + i + "][NameFile]']").text(RenameFileName(obj.PathFile.replace("/upload/formdemo/", "")));
                        }
                    });
                }
            });
    });

    function Save() {
        if (!Validate()) return;
        var formDemoDetailViewModels = $('#FormDemo').repeaterVal().FormDemoDetailViewModel;
        //Validate dòng cuối cùng của Repeater.
        if (!ValidateEnd(formDemoDetailViewModels[formDemoDetailViewModels.length - 1])) return;
        window.objAjax.parameters = {
            FormDemoId: parseInt('@Model?.FormDemoId'),
            Name: $("#Name").val(),
            Textarea: $("#Textarea").val(),
            DateTime: GetDateTime("#DateTime"),
            FormDemoDetailViewModels: formDemoDetailViewModels
        };
        window.objAjax.divLoading = "#FormDemo";
        AjaxPostAsync("/Api/FormDemo/AddOrUpdate", window.objAjax,
            function() {
                window.location.reload();
            });
    }
    function Validate() {
        if ($("#Name") === "") {
            SwalNotifyError("Name không được để trống!");
            return false;
        }
        return true;
    }
    function ValidateEnd(data) {
        if (data?.Name === "") {
            SwalNotifyError("Name không được để trống!");
            return false;
        }
        return true;
    }

</script>
