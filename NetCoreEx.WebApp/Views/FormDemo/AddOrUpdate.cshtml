@{
    ViewData["Title"] = "Thêm mới Temp";
}
@model FormDemoViewModel
<div class="toolbar d-flex flex-stack flex-wrap ms-5 mb-5 mb-lg-5" id="kt_toolbar">
    <div class="page-title d-flex flex-column py-1">
        <h1 class="d-flex align-items-center my-1">
            <span class="text-dark fw-bolder fs-1">@ViewData["Title"]</span>
        </h1>
    </div>
</div>
<div class="card card mb-5 mb-xl-10">
    <div class="card-body py-10">
        @*bắt buộc nhập*@
        <div class="row mb-4">
            @*Input*@
            <div class="col-lg-3">
                <div class="form-group row">
                    <div class="col-lg-12 form-control form-control-floating card">
                        <input placeholder="none" type="text" class="form-input" id="Name" value="@Model.Name">
                        <label class="form-label" for="Name">Name<span class="text-danger">*</span></label>
                    </div>
                </div>
            </div>
            @*Textarea*@
            <div class="col-lg-3">
                <div class="form-group row">
                    <div class="col-lg-12 form-control form-control-floating card">
                        <textarea placeholder="none" class="form-input" type="text" rows="3" id="Textarea">@Html.Raw(Model.Textarea)</textarea>
                        <label class="form-label" for="Textarea">Textarea<span class="text-danger">*</span></label>
                    </div>
                </div>
            </div>
            @*Radio*@
            <div class="col-lg-3">
                <div class="form-group row">
                    <div class="col-lg-12 form-control-floating card w-250px">
                        <div class="col-form-label col-form-radio">
                            <div class="form-check form-check-custom form-check-solid form-check-sm" style="float: left; width: 100px;">
                                <input type="radio" id="check1" name="check" class="form-check-input" value="1">
                                <label class="form-check-label" for="check1">Radio 1</label>
                            </div>
                            <div class="form-check form-check-custom form-check-solid form-check-sm" style="float: left; width: 100px;">
                                <input type="radio" id="check2" name="check" class="form-check-input" value="2">
                                <label class="form-check-label" for="check2">Radio 2</label>
                            </div>
                            <label class="form-label" style="top: -10px;font-size: 0.875rem;">Radio</label>
                        </div>
                    </div>
                </div>
                <script type="text/javascript">
                    //Set
                    //$("input[name=check][value=@(Model.Radio??1)]").attr('checked', 'checked');
                    //Get
                    //var value = $("input[name='check']:checked").val() === "1" ? true : false;
                </script>
            </div>
            @*switch checkbox*@
            <div class="col-lg-3 mt-2">
                <div class="form-group row">
                    <div class="col-lg-12">
                        <label class="form-check form-switch form-check-custom form-check-solid">
                            <input class="form-check-input" type="checkbox" id="Switch" value="1" checked="checked" />
                            <span class="form-check-label fw-bold">Switch</span>
                        </label>
                    </div>
                </div>
            </div>
            <script type="text/javascript">
                //Set
                //$("#Switch").prop('checked', '@Model.Switch' === "True");
                //Get
                //var check = $("#Switch").is(":checked");
            </script>
            <div class="col-lg-6 mt-2">
                <div class="d-flex gap-9 mb-7" id="ActiveType">
                    <button type="button" onclick="ActiveType(this,1)" id="Type1" class="btn btn-outline btn-outline-dashed btn-outline-default w-180px" data-bs-toggle="tooltip" data-bs-html="true" title="tooltip1">
                        Panel
                    </button>
                    <button type="button" onclick="ActiveType(this,2)" id="Type2" class="btn btn-outline btn-outline-dashed btn-outline-default w-180px" data-bs-toggle="tooltip" data-bs-html="true" title="tooltip1">
                        Pane2
                    </button>
                    <button type="button" onclick="ActiveType(this,3)" id="Type3" class="btn btn-outline btn-outline-dashed btn-outline-default w-200px" data-bs-toggle="tooltip" data-bs-html="true" title="tooltip1">
                        Panel3
                    </button>
                    <button type="button" onclick="ActiveType(this,4)" id="Type4" class="btn btn-outline btn-outline-dashed btn-outline-default w-200px" data-bs-toggle="tooltip" data-bs-html="true" title="tooltip1">
                        Panel4
                    </button>
                    <input type="hidden" id="Type" value="" />
                    <script type="text/javascript">
                        function ActiveType(id, value) {
                            $("#Type").val(value);
                            $("#ActiveType button").removeClass("active");
                            $(id).addClass("active");
                        }
                    </script>
                </div>
            </div>
        </div>
        <div class="row mb-4" id="r2">
