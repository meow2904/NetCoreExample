                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(function() {
        console.log(typeof ('@(User.Identity?.GetAvatar())'));
    })
    function LoadDataModal() {
        $('#Item').empty();
        var htmlItem1 = '';
        AjaxGetAsync("/Api/Notification/ListNotification", window.objAjax, function(result) {
            var kq = JSON.parse(result).Results
            for (var i = 0; i < JSON.parse(result).Results.length; i++) {
                var hour = GetTimeDiff(kq[i].DateStart);
                console.log(kq[i].EmployeeViewModel.Avatar);
                var avatar = kq[i].EmployeeViewModel.Avatar == undefined ? "/avatar/AvatarDF.png" : kq[i].EmployeeViewModel.Avatar;
                htmlItem1 += '<button class="d-flex flex-stack py-4 w-300px"  style="border: none; background: none; outline:none ; "  id="' + kq[i].NotificationId + '" name="' + kq[i].SourceUrl + '"> <a href="' + kq[i].SourceUrl + '"> <div class="d-flex align-items-center" <div class="symbol symbol-35px me-4"> <span class="symbol-label bg-light-primary" >  <img alt="' + kq[i].UserName + '" src="' + avatar + '" alt="" width="35px" height="35px" style="border-radius: 100px;overflow: hidden" />  </span>   </div>   <div class="mb-0 me-2">    <a href="' + kq[i].SourceUrl + '" class="fs-7 text-gray-700" > ' + kq[i].Content + '</a>   </div>  <span class="badge badge-light fs-8" id="thoiGian">' + hour + ' </span> </a> </button>';
            }
            $('#Item').html(htmlItem1);
            for (var i = 0; i < JSON.parse(result).Results.length; i++) {
                if (kq[i].Status == 4) {
                    $('#' + kq[i].NotificationId + '').attr("style", "border: none; background: none; outline:none ; opacity:0.5");
                }
                if (kq[i].Status == 1) {
                    $('#' + kq[i].NotificationId + '').click(function() {
                        var notificationID = $(this).attr("id")
                        window.objAjax.parameters = {};
                        window.objAjax.isFuntConfirm = true;
                        window.objAjax.divLoading = "body";
                        AjaxPostAsync("/Api/Notification/UpdateStatus/" + notificationID, window.objAjax);
                        window.location.href = $(this).attr("name");
                    });
                }
            }
        })
    };



</script>